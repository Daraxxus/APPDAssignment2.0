<UserControl x:Class="APPDAssignment2._0.Screens.Mainpage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APPDAssignment2._0.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>

        </Grid.RowDefinitions>
        <Label x:Name="Screenlabel" Grid.Row="1" Content="Login Screen" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="30" Height="50" Width="180"/>
        <Button x:Name="loginButton" Grid.Row="2" Content="Log In" HorizontalAlignment="Center"  VerticalAlignment="Center"  FontSize="20" Width="200" Height="75" Click="loginButton_Click"/>
        <Button x:Name="signupButton" Grid.Row="3" Content="Sign up" HorizontalAlignment="Center"  VerticalAlignment="Center"  FontSize="20" Width="200" Height="75" Click="signupButton_Click"/>
    </Grid>
</UserControl>
